<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/blue_grey_light</item>
    </style>


    <style name="AppTheme.FullScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/blue_grey_light</item>
    </style>

    <style name="MainTabStyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/colorMainDark</item>
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabTextAppearance">@style/MainTabTextStyle</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
    </style>

    <style name="MainTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/textSizeExtraLarge</item>
        <item name="android:textColor">@color/colorMainDarkAlpha</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--Toolbar-->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/caviar_dreams_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--Bottom bar-->
    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@drawable/bg_chip_state_list</item>
        <item name="android:textColor">@drawable/chip_text_color_chip_state_list</item>
    </style>

